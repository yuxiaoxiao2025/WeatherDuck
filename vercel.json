{
  "version": 2,
  "name": "weather-duck-preview",
  "alias": ["weather-duck-preview"],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist-web"
      }
    }
  ],
  "buildCommand": "npm run build:web-preview",
  "outputDirectory": "dist-web",
  "installCommand": "npm install",
  "devCommand": "npm run dev:web",
  "framework": "vite",
  "routes": [
    {
      "src": "/api/(.*)",
      "status": 404,
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|webp|avif))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://devapi.qweather.com https://geoapi.qweather.com;"
        }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_APP_TITLE": "天气鸭 Web 预览版",
    "VITE_APP_VERSION": "1.0.0",
    "VITE_BUILD_TARGET": "web-preview",
    "VITE_APP_ENV": "staging",
    "VITE_ENABLE_PWA": "true",
    "VITE_QWEATHER_API_KEY": "@qweather_api_key",
    "VITE_WEATHER_API_BASE_URL": "@qweather_api_host",
    "VITE_QWEATHER_CREDENTIAL_ID": "@qweather_credential_id"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "VITE_APP_TITLE": "天气鸭 Web 预览版",
      "VITE_APP_VERSION": "1.0.0",
      "VITE_BUILD_TARGET": "web-preview",
      "VITE_APP_ENV": "staging",
      "VITE_ENABLE_PWA": "true"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "regions": ["hkg1", "sin1"],
  "github": {
    "enabled": true,
    "autoAlias": true,
    "autoJobCancelation": true,
    "silent": false
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true
    }
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "public": true,
  "crons": []
}