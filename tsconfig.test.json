{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "isolatedModules": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    "tests/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-web",
    "out"
  ]
}