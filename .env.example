# 天气鸭环境变量配置示例
# 复制此文件为 .env.local 并填入实际的配置值

# ===========================================
# 和风天气 API 配置
# ===========================================
QWEATHER_API_KEY=6b95a713b2854ca0b5b62ac9d9cca3bb
QWEATHER_BASE_URL=https://nd2r6wuqd7.re.qweatherapi.com
QWEATHER_CREDENTIAL_ID=CGPNGJKBU6

# Vite构建时使用的API配置
VITE_QWEATHER_API_KEY=6b95a713b2854ca0b5b62ac9d9cca3bb
VITE_WEATHER_API_BASE_URL=https://nd2r6wuqd7.re.qweatherapi.com
VITE_GEO_API_BASE_URL=https://geoapi.qweather.com
VITE_QWEATHER_CREDENTIAL_ID=CGPNGJKBU6

# ===========================================
# 应用基础配置
# ===========================================
APP_NAME=天气鸭
APP_VERSION=1.0.0
NODE_ENV=development

# Vite应用配置
VITE_APP_TITLE=天气鸭
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=现代化的桌面天气应用
VITE_BUILD_TARGET=electron

# ===========================================
# Web预览版配置
# ===========================================
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true
VITE_PUBLIC_PATH=/
VITE_APP_ENV=development

# 预览环境特定配置
VITE_STAGING_API_URL=https://api-staging.weatherduck.com
VITE_PREVIEW_MODE=true
VITE_DEBUG_PANEL=true

# ===========================================
# 数据库配置
# ===========================================
DB_PATH=./data/weather.db

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
VITE_LOG_LEVEL=info

# ===========================================
# 缓存配置
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# 报时功能配置
CUCKOO_ENABLED=true
CUCKOO_START_HOUR=8
CUCKOO_END_HOUR=22
CUCKOO_SOUND_PATH=./assets/sounds/cuckoo.mp3

# 主题配置
DEFAULT_THEME=light
ENABLE_THEME_SWITCHING=true

# 窗口配置
WINDOW_WIDTH=400
WINDOW_HEIGHT=600
WINDOW_MIN_WIDTH=350
WINDOW_MIN_HEIGHT=500

# 开发配置
DEV_TOOLS=true
HOT_RELOAD=true
VITE_PORT=3000
ELECTRON_PORT=3001

# 更新配置
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=86400000

# 错误报告配置
ERROR_REPORTING_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here

# 性能监控
PERFORMANCE_MONITORING=false
ANALYTICS_ENABLED=false