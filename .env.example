# 天气鸭环境变量配置示例
# 复制此文件为 .env 并填入实际的配置值

# 和风天气 API 配置
QWEATHER_API_KEY=your_qweather_api_key_here
QWEATHER_BASE_URL=https://devapi.qweather.com

# 应用配置
APP_NAME=天气鸭
APP_VERSION=1.0.0
NODE_ENV=development

# 数据库配置
DB_PATH=./data/weather.db

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 缓存配置
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# 报时功能配置
CUCKOO_ENABLED=true
CUCKOO_START_HOUR=8
CUCKOO_END_HOUR=22
CUCKOO_SOUND_PATH=./assets/sounds/cuckoo.mp3

# 主题配置
DEFAULT_THEME=light
ENABLE_THEME_SWITCHING=true

# 窗口配置
WINDOW_WIDTH=400
WINDOW_HEIGHT=600
WINDOW_MIN_WIDTH=350
WINDOW_MIN_HEIGHT=500

# 开发配置
DEV_TOOLS=true
HOT_RELOAD=true
VITE_PORT=3000
ELECTRON_PORT=3001

# 更新配置
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=86400000

# 错误报告配置
ERROR_REPORTING_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here

# 性能监控
PERFORMANCE_MONITORING=false
ANALYTICS_ENABLED=false